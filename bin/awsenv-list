#!/usr/bin/env bash

set -e
[ -n "$AWSENV_DEBUG" ] && set -x

AWSENV_ROOT="$(awsenv root)"
AWSENV_DEFAULT="$(awsenv default)"

ENVIRONMENTS="$(ls -1 "$AWSENV_ROOT/envs")"
for environment in $ENVIRONMENTS; do
    if [ "$environment" == "gitkeep" ]; then
        continue
    fi

    if [ "$environment" == "$AWSENV_DEFAULT" ]; then
        echo -e "$environment \033[32m(default)\033[0m"
    else
        echo "$environment"
    fi
done
